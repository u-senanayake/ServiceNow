<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_background"
                android:orientation="vertical">


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_add_a_photo_black_24dp" />

                            <Button
                                android:id="@+id/profile_btn_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="@string/profile_btn_image" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/button_style"
                                android:src="@drawable/person" />
                        </LinearLayout>
                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_user_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_name_ini"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_name_ini"
                                android:inputType="text" />
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_user_2_black_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_name"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_name"
                                android:inputType="text" />
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_user_2_black_24dp" />

                            <EditText
                                android:id="@+id/profile_full_name_lan1"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_full_name_lan1"
                                android:inputType="text" />
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_address_black_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_address"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_address"
                                android:inputType="text" />
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_address_black_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_address_lan1"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_address_lan1"
                                android:inputType="text" />
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_city_black_24dp" />

                            <Spinner
                                android:id="@+id/citySpinner"
                                style="@style/profile_add_edit_text" />
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_wc_black_24dp" />

                            <RadioGroup
                                android:id="@+id/radioSex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/radioMale"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="true"
                                        android:text="Male" />

                                    <RadioButton
                                        android:id="@+id/radioFemale"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Female" />

                                </LinearLayout>
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_dob_black_24dp" />

                            <EditText
                                android:id="@+id/profile_enrolled_date"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_enrolled_date"
                                android:inputType="date" />
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_id_black_24dp" />

                            <EditText
                                android:id="@+id/profile_nic_passport"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_nic_passport"
                                android:inputType="text" />
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_contact_black_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_contact_home"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_contact_home"
                                android:inputType="phone" />
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_contact_black_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_contact_mobile"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_contact_mobile"
                                android:inputType="phone" />
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_cloud_queue_black_24dp" />

                            <Spinner
                                android:id="@+id/profile_edit_risk_status"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edit_risk_status"
                                android:inputType="number" />
                        </LinearLayout>



                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_verified_user_black_24dp" />

                            <Spinner
                                android:id="@+id/profile_edt_txt_fid"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_fid" />
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_verified_user_black_24dp" />

                            <Spinner
                                android:id="@+id/profile_edt_txt_bid"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_bid" />
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_verified_user_black_24dp" />

                            <Spinner
                                android:id="@+id/profile_edt_txt_sid"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_sid" />
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_pass_black_24dp" />

                            <RadioGroup
                                style="@style/profile_add_edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/fairtrade_status">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="tatus 1" />

                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="status 2" />

                                </LinearLayout>
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout style="@style/profile_layout">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@string/icon"
                                android:src="@drawable/ic_mode_edit_black_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_remark"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_remark"
                                android:inputType="text" />
                        </LinearLayout>


                        <Button
                            android:id="@+id/btn_add_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/button_style"
                            android:text="Add"
                            android:textColor="#130707" />

                    </LinearLayout>


                </ScrollView>

            </android.support.v7.widget.CardView>
        </RelativeLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>