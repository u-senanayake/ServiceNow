<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="380dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/gradient_background"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_style"
                    android:src="@drawable/person" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_user_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_name_ini"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_name_ini" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_user_2_black_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_name"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_name" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_wc_black_24dp" />

                            <RadioGroup
                                style="@style/profile_add_edit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Male" />

                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Female" />

                                </LinearLayout>
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_address_black_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_address"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_address" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_city_black_24dp" />

                            <AutoCompleteTextView
                                android:id="@+id/profile_edt_txt_city"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_city" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_dob_black_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_dob"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_dob" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_contact_black_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_contact"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_contact" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_email_black_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_email"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_email" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_verified_user_black_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_user_name"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_user_name" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/profile_add_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_pass_black_24dp" />

                            <EditText
                                android:id="@+id/profile_edt_txt_user_password"
                                style="@style/profile_add_edit_text"
                                android:hint="@string/profile_edt_txt_user_password" />
                        </LinearLayout>
                    </LinearLayout>


                </ScrollView>

            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_add_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_style"
            android:text="Add"
            android:textColor="#130707" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>